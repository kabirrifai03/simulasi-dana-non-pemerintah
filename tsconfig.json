{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".", // Tambahkan baris ini
    "paths": {      // Tambahkan blok ini
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"], // Jika ada folder lib di src
      "@/hooks/*": ["./src/hooks/*"], // Jika ada folder hooks di src
      "@/pages/*": ["./src/pages/*"], // Mungkin Anda ingin membuat alias untuk pages juga
      "@/context/*": ["./src/context/*"], // Alias untuk context
      "@/*": ["./src/*"] // Alias umum untuk setiap folder di dalam 'src'
    }
  },
  "include": [
    "src"
  ]
}